<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottmsheets_lay"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bottomsheet_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/telegram" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="Maths Solution/Discussion Group"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="16dp"
        android:text="Take Screenshot or image, send it to group, know your solution ðŸ˜Š\n\n 'join now' button click then may be open other app I have no control please take your risk know more read privacy policy"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/join_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/tele_btn_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/join_now"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>